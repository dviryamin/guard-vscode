{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Guard",
  "scopeName": "source.guard",
  "patterns": [
    { "include": "#comments" },
    { "include": "#custom-messages" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#variables" },
    { "include": "#strings" },
    { "include": "#regex" },
    { "include": "#numbers" },
    { "include": "#booleans" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.guard",
      "match": "#.*$"
    },
    "custom-messages": {
      "name": "string.quoted.other.custom-message.guard",
      "begin": "<<",
      "end": ">>",
      "patterns": [
        {
          "name": "keyword.other.guard",
          "match": "\\b(Violation|Fix):"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.guard",
          "match": "\\b(rule|let|when|some|or|OR)\\b"
        },
        {
          "name": "keyword.operator.logical.guard",
          "match": "\\b(not|NOT)\\b|!"
        },
        {
          "name": "variable.language.this.guard",
          "match": "\\b(this|THIS)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.guard",
          "match": "\\b(json_parse|regex_replace|join|to_lower|to_upper|substring|url_decode|count|parse_int|parse_float|parse_string|parse_boolean|parse_char|parse_epoch|now)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.guard",
          "match": "==|!=|>=|<=|>|<"
        },
        {
          "name": "keyword.operator.guard",
          "match": "\\b(IN|in|exists|empty|keys|is_string|is_list|is_struct|is_map|is_bool|is_int|is_float|is_null)\\b"
        }
      ]
    },
    "variables": {
      "name": "variable.other.guard",
      "match": "%[a-zA-Z_][a-zA-Z0-9_]*"
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.guard",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.guard",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.guard",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.guard",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "regex": {
      "name": "string.regexp.guard",
      "begin": "/",
      "end": "/",
      "patterns": [
        {
          "name": "constant.character.escape.guard",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.guard",
          "match": "-?\\d+\\.\\d+([eE][+-]?\\d+)?"
        },
        {
          "name": "constant.numeric.integer.guard",
          "match": "-?\\d+"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.guard",
          "match": "\\b(true|false|True|False|TRUE|FALSE|null|NULL)\\b"
        }
      ]
    }
  }
}
